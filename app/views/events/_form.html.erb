<%= form_for(@event, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :start, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :end, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :img_url, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :img_url, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
