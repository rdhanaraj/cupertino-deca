<% if user_signed_in? and current_user.admin %>

  <h3>Members (<%= @users.count %>)</h3>
  <table class="table table-hover">
    <th>Name</th>
    <th>Surname</th>
    <th>Email</th>
    <th>Grade</th>
    <% for user in @users %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.surname %></td>
      <td><%= user.email%></td>
      <td><%= user.grade%></td>
    </tr>
    <% end %>
  </table>

  <h3>Registrations (<%= @attendances.count %>)</h3>
  <% for item in @attendances %>
    <table class="table table-hover">
      <tr>
        <td><%= "#{item.user.name} has signed up for #{item.event.name}."%></td>
      </tr>
    </table>
  <% end %>


<% else %>
  Admin users only.
<% end %>